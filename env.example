# File env.example - Template cho environment variables
# Sao chép file này thành .env và điền các giá trị thực tế

# Database URL - Chọn một trong hai cấu hình bên dưới:

# 1. Cho development với PostgreSQL local:
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# 2. Cho Docker container:
# DATABASE_URL="postgresql://ecom_user:ecom_password@postgres:5432/ecom_db?schema=public"

# App Configuration
APP_NAME='NestJS Ecommerce Platform'
NODE_ENV=development
PORT=3000

# JWT Configuration
ACCESS_TOKEN_SECRET='your_access_token_secret'
ACCESS_TOKEN_EXPIRES_IN='15m'
REFRESH_TOKEN_SECRET='your_refresh_token_secret'
REFRESH_TOKEN_EXPIRES_IN='7d'
SECRET_API_KEY='your_secret_api_key'

# Admin Default User
ADMIN_NAME='Your Admin Name'
ADMIN_PASSWORD=your_admin_password
ADMIN_EMAIL=admin@example.com
ADMIN_PHONENUMBER=0909090909

# OTP Configuration
OTP_EXPIRES_IN=5m
RESEND_API_KEY=your_resend_api_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_CLIENT_REDIRECT_URI=http://localhost:3300/oauth-google-callback

# Media Prefix
PREFIX_STATIC_ENDPOINT=http://localhost:3000/media/static

# AWS S3 Configuration
S3_REGION=your_region
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name 